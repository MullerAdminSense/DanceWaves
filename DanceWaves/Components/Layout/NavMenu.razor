@using Microsoft.AspNetCore.Components.Authorization
@using System.Linq
@using System
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <a class="navbar-brand" href="">DanceWaves</a>
            @if (IsAuthenticated && !string.IsNullOrWhiteSpace(CurrentUserName))
            {
                <div class="text-light ms-2">Hello, @CurrentUserName</div>
            }
        <div class="d-flex align-items-center">
            @if (!IsAuthenticated)
            {
                <a class="btn btn-outline-light me-2" href="/login">Login</a>
                <a class="btn btn-primary" href="/register">Register</a>
            }
        </div>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<AuthorizeView>
    <Authorized>
        <div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
            <nav class="nav flex-column">
                @if (navigationMenu?.MenuItems != null)
                {
                    @foreach (var item in navigationMenu.MenuItems)
                    {
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="@item.Route" Match="NavLinkMatch.All">
                                <span>@item.Icon</span> @item.Label
                            </NavLink>
                        </div>
                    }
                }
            </nav>
        </div>
    </Authorized>
</AuthorizeView>

@code {
    private NavigationViewModel? navigationMenu;

    [Inject]
    private AuthenticationStateProvider AuthStateProvider { get; set; } = default!;

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    private bool IsAuthenticated = false;
    private string CurrentUserName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (navigationPresenterPort != null)
        {
            var navigationUseCase = new GetNavigationMenuUseCase(navigationPresenterPort);
            navigationMenu = await navigationUseCase.ExecuteAsync();
        }
        await CheckAuthenticationAsync();
    }

    private async Task CheckAuthenticationAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        IsAuthenticated = authState.User.Identity?.IsAuthenticated ?? false;
        if (IsAuthenticated)
        {
            var fullNameClaim = authState.User.Claims.FirstOrDefault(c => c.Type.EndsWith("FullName"))?.Value;
            if (!string.IsNullOrWhiteSpace(fullNameClaim))
            {
                CurrentUserName = fullNameClaim;
            }
            else
            {
                var firstName = authState.User.Claims.FirstOrDefault(c => c.Type.EndsWith("FirstName"))?.Value;
                var lastName = authState.User.Claims.FirstOrDefault(c => c.Type.EndsWith("LastName"))?.Value;
                if (!string.IsNullOrWhiteSpace(firstName) || !string.IsNullOrWhiteSpace(lastName))
                {
                    CurrentUserName = $"{firstName} {lastName}".Trim();
                }
                else
                {
                    CurrentUserName = authState.User.Identity?.Name ?? authState.User.Claims.FirstOrDefault(c => c.Type.EndsWith("emailaddress"))?.Value ?? "User";
                }
            }
        }
        else
        {
            CurrentUserName = string.Empty;
        }
        StateHasChanged();
    }


