@page "/register-entrytype"
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@using DanceWaves.Application.Dtos
@using DanceWaves.Application.Ports
@using DanceWaves.Models
@inject IAuthenticationPort AuthenticationPort
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<EntryTypeRegister> Logger
@rendermode InteractiveServer

<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            @if (IsAdmin)
            {
                <div class="container-fluid mt-4">
                    <div class="row mb-2">
                        <div class="col-md-12">
                            <a href="/administration" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left"></i> Back to Administration
                            </a>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h2 class="mb-0"><i class="bi bi-people-fill"></i> Entry Type Management</h2>
                            <p class="text-muted">Manage the number of dancers for each entry type</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ErrorMessage
                            <button type="button" class="btn-close" @onclick="@(() => ErrorMessage = null)"></button>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @SuccessMessage
                            <button type="button" class="btn-close" @onclick="@(() => SuccessMessage = null)"></button>
                        </div>
                    }

                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title mb-3">@FormTitle</h5>
                            <form class="row gx-3 gy-2 align-items-end">
                                <div class="col-md-5">
                                    <label class="form-label">Name</label>
                                    <input class="form-control" @bind="EditingEntryType.Name" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Number of Dancers</label>
                                    <input type="number" class="form-control" @bind="EditingEntryType.NumberOfDancers" min="0" />
                                </div>
                                <div class="col-md-4 d-flex gap-2">
                                    <button type="button" class="btn btn-success" @onclick="HandleSaveEntryType" disabled="@IsSavingEntryType">
                                        @(EditingEntryType.Id > 0 ? "Update" : "Create")
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" @onclick="CancelEditEntryType" disabled="@IsSavingEntryType">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    @if (IsLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (EntryTypes == null || !EntryTypes.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No entry types defined yet.
                        </div>
                    }
                    else
                    {
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>ID</th>
                                                <th>Name</th>
                                                <th>Number of Dancers</th>
                                                <th class="text-center">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var entryType in EntryTypes)
                                            {
                                                <tr>
                                                    <td>@entryType.Id</td>
                                                    <td>@entryType.Name</td>
                                                    <td>@entryType.NumberOfDancers</td>
                                                    <td class="text-center">
                                                        <div class="btn-group" role="group">
                                                            <button class="btn btn-sm btn-outline-primary" @onclick="@(() => HandleEditEntryType(entryType))" title="Edit Entry Type">
                                                                <i class="bi bi-pencil"></i>
                                                            </button>
                                                            <button class="btn btn-sm btn-outline-danger" @onclick="@(() => HandleDeleteEntryType(entryType))" title="Delete Entry Type">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }

                    @if (ShowDeleteConfirm && EntryTypeToDelete != null)
                    {
                        <div class="modal fade show" style="display: block;" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Confirm Deletion</h5>
                                        <button type="button" class="btn-close" @onclick="@(() => ShowDeleteConfirm = false)"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Delete entry type <strong>@EntryTypeToDelete.Name</strong>?</p>
                                        <p class="text-danger"><small>This action cannot be undone.</small></p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" @onclick="@(() => ShowDeleteConfirm = false)">Cancel</button>
                                        <button type="button" class="btn btn-danger" @onclick="ConfirmDeleteEntryType" disabled="@IsDeleting">
                                            @if (IsDeleting)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                            }
                                            Delete Entry Type
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-backdrop fade show"></div>
                    }
                </div>
            }
            else
            {
                <div class="container-fluid mt-5">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> You do not have permission to access this page.
                    </div>
                </div>
            }
        </Authorized>
        <NotAuthorized>
            <div class="container-fluid mt-5">
                <div class="alert alert-danger">
                    <i class="bi bi-lock"></i> Please log in to access this page.
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>

@code {
    private List<EntryType> EntryTypes { get; set; } = new();
    private EntryType EditingEntryType { get; set; } = new();
    private EntryType? EntryTypeToDelete { get; set; }
    private bool IsLoading { get; set; } = true;
    private bool IsSavingEntryType { get; set; } = false;
    private bool IsAdmin { get; set; } = false;
    private bool IsDeleting { get; set; } = false;
    private string? ErrorMessage { get; set; }
    private string? SuccessMessage { get; set; }
    private bool ShowDeleteConfirm { get; set; } = false;

    private string FormTitle => EditingEntryType.Id > 0 ? "Update Entry Type" : "Create Entry Type";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (!string.IsNullOrEmpty(userId))
            {
                var currentUser = await AuthenticationPort.GetCurrentUserAsync(userId);
                if (currentUser != null)
                {
                    var rolePermissions = await AuthenticationPort.GetAllRolePermissionsAsync();
                    var userRole = rolePermissions.FirstOrDefault(r => r.Id == currentUser.RolePermissionId);
                    IsAdmin = userRole != null && (userRole.Name == "SuperAdmin" || userRole.Name == "FranchiseAdmin");
                }
            }

            if (IsAdmin)
            {
                await LoadEntryTypes();
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading entry types: {ex.Message}";
            Logger.LogError(ex, "Error loading entry types in EntryTypeRegister");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task LoadEntryTypes()
    {
        try
        {
            EntryTypes = await AuthenticationPort.GetAllEntryTypesAsync();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading entry types: {ex.Message}";
            Logger.LogError(ex, "Error loading entry types");
        }
    }

    private void HandleEditEntryType(EntryType entryType)
    {
        Logger.LogInformation("Editing entry type {EntryTypeId}", entryType.Id);
        EditingEntryType = new EntryType
        {
            Id = entryType.Id,
            Name = entryType.Name,
            NumberOfDancers = entryType.NumberOfDancers
        };
        ErrorMessage = null;
        SuccessMessage = null;
    }

    private void CancelEditEntryType()
    {
        Logger.LogInformation("Entry type edit canceled");
        EditingEntryType = new EntryType();
        ErrorMessage = null;
    }

    private async Task HandleSaveEntryType()
    {
        ErrorMessage = null;
        SuccessMessage = null;
        if (string.IsNullOrWhiteSpace(EditingEntryType.Name))
        {
            ErrorMessage = "Entry type name is required.";
            return;
        }

        IsSavingEntryType = true;
        try
        {
            AuthenticationResponse response;
            if (EditingEntryType.Id > 0)
            {
                response = await AuthenticationPort.UpdateEntryTypeAsync(EditingEntryType);
            }
            else
            {
                response = await AuthenticationPort.CreateEntryTypeAsync(EditingEntryType);
            }

            if (response.IsSuccess)
            {
                SuccessMessage = response.Message ?? "Entry type saved.";
                EditingEntryType = new EntryType();
                await LoadEntryTypes();
            }
            else
            {
                ErrorMessage = response.Message ?? "Failed to save entry type.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error saving entry type: {ex.Message}";
            Logger.LogError(ex, "Error saving entry type");
        }
        finally
        {
            IsSavingEntryType = false;
        }
    }

    private void HandleDeleteEntryType(EntryType entryType)
    {
        Logger.LogInformation("Preparing to delete entry type {EntryTypeId}", entryType.Id);
        EntryTypeToDelete = entryType;
        ShowDeleteConfirm = true;
    }

    private async Task ConfirmDeleteEntryType()
    {
        if (EntryTypeToDelete == null) return;

        IsDeleting = true;
        ErrorMessage = null;
        SuccessMessage = null;
        try
        {
            var response = await AuthenticationPort.DeleteEntryTypeAsync(EntryTypeToDelete.Id);
            if (response.IsSuccess)
            {
                SuccessMessage = response.Message ?? "Entry type deleted.";
                ShowDeleteConfirm = false;
                EntryTypeToDelete = null;
                await LoadEntryTypes();
            }
            else
            {
                ErrorMessage = response.Message ?? "Failed to delete entry type.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error deleting entry type: {ex.Message}";
            Logger.LogError(ex, "Error deleting entry type: {EntryTypeId}", EntryTypeToDelete?.Id);
        }
        finally
        {
            IsDeleting = false;
        }
    }
}
