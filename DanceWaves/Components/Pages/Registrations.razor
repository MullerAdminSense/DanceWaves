@page "/registrations"
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using DanceWaves.Application.Dtos
@using DanceWaves.Application.Ports
@using DanceWaves.Models
@inject IAuthenticationPort AuthenticationPort
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject ILogger<Registrations> Logger
@rendermode InteractiveServer

<AuthorizeView>
    <Authorized>
        @if (IsSuperAdmin)
        {
            <div class="container-fluid mt-4">
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h2 class="d-inline-block ms-2 mb-0"><i class="bi bi-people"></i> User Management</h2>
                                <p class="text-muted">View and manage user registrations</p>
                            </div>
                            <button class="btn btn-primary" @onclick="HandleAddUser">
                                <i class="bi bi-plus-circle"></i> Add User
                            </button>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @ErrorMessage
                        <button type="button" class="btn-close" @onclick="@(() => ErrorMessage = null)"></button>
                    </div>
                }

                @if (!string.IsNullOrEmpty(SuccessMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @SuccessMessage
                        <button type="button" class="btn-close" @onclick="@(() => SuccessMessage = null)"></button>
                    </div>
                }

                @if (IsLoading)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
                else if (Users == null || !Users.Any())
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> No users found.
                    </div>
                }
                else
                {
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search users..." @bind="searchTerm" @bind:event="oninput" />
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="bi bi-search"></i> Search
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">Total Users</h5>
                                    <h3 class="text-primary">@Users.Count</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">Active</h5>
                                    <h3 class="text-success">@Users.Count</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">Admins</h5>
                                    <h3 class="text-warning">@(Users.Count(u => RolePermissions?.FirstOrDefault(r => r.Id == u.RolePermissionId)?.Name == "SuperAdmin" || RolePermissions?.FirstOrDefault(r => r.Id == u.RolePermissionId)?.Name == "FranchiseAdmin"))</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">Regular Users</h5>
                                    <h3 class="text-info">@(Users.Count(u => RolePermissions?.FirstOrDefault(r => r.Id == u.RolePermissionId)?.Name == "User"))</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Name</th>
                                                    <th>Email</th>
                                                    <th>Phone</th>
                                                    <th>Role</th>
                                                    <th>Dance School</th>
                                                    <th>Franchise</th>
                                                    <th class="text-center">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var user in FilteredUsers)
                                                {
                                                    <tr>
                                                        <td>@user.Id</td>
                                                        <td>@user.FirstName @user.LastName</td>
                                                        <td>@user.Email</td>
                                                        <td>@(user.Phone ?? "-")</td>
                                                        <td>
                                                            @{
                                                                var role = RolePermissions?.FirstOrDefault(r => r.Id == user.RolePermissionId);
                                                                <span class="badge bg-secondary">@(role?.Name ?? "Unknown")</span>
                                                            }
                                                        </td>
                                                        <td>@(user.DanceSchoolId.HasValue ? DanceSchools?.FirstOrDefault(ds => ds.Id == user.DanceSchoolId)?.LegalName ?? "-" : "-")</td>
                                                        <td>@(user.DefaultFranchiseId.HasValue ? Franchises?.FirstOrDefault(f => f.Id == user.DefaultFranchiseId)?.LegalName ?? "-" : "-")</td>
                                                        <td class="text-center">
                                                            <div class="btn-group" role="group">
                                                                <button class="btn btn-sm btn-outline-primary" 
                                                                        @onclick="@(() => HandleEditUser(user))" 
                                                                        title="Edit User">
                                                                    <i class="bi bi-pencil"></i>
                                                                </button>
                                                                <button class="btn btn-sm btn-outline-danger" 
                                                                        @onclick="@(() => HandleDeleteUser(user))" 
                                                                        title="Delete User">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @* Modal de confirmação de exclusão *@
            @if (ShowDeleteConfirm && UserToDelete != null)
            {
                <div class="modal fade show" style="display: block;" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Confirm Deletion</h5>
                                <button type="button" class="btn-close" @onclick="@(() => ShowDeleteConfirm = false)"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete user <strong>@UserToDelete.FirstName @UserToDelete.LastName</strong> (@UserToDelete.Email)?</p>
                                <p class="text-danger"><small>This action cannot be undone.</small></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" @onclick="@(() => ShowDeleteConfirm = false)">Cancel</button>
                                <button type="button" class="btn btn-danger" @onclick="ConfirmDeleteUser" disabled="@IsDeleting">
                                    @if (IsDeleting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    Delete User
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-backdrop fade show"></div>
            }
        }
        else
        {
            <div class="container-fluid mt-5">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> You do not have permission to access this page.
                </div>
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <div class="container-fluid mt-5">
            <div class="alert alert-danger">
                <i class="bi bi-lock"></i> Please log in to access this page.
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<UserDto> Users { get; set; } = new();
    private List<UserRolePermission> RolePermissions { get; set; } = new();
    private List<DanceSchool> DanceSchools { get; set; } = new();
    private List<Franchise> Franchises { get; set; } = new();
    private bool IsLoading { get; set; } = true;
    private bool IsSuperAdmin { get; set; } = false;
    private int? CurrentUserId { get; set; }
    private string? ErrorMessage { get; set; }
    private string? SuccessMessage { get; set; }
    private bool ShowDeleteConfirm { get; set; } = false;
    private UserDto? UserToDelete { get; set; }
    private bool IsDeleting { get; set; } = false;
    private string searchTerm = "";

    private IEnumerable<UserDto> FilteredUsers
    {
        get
        {
            if (string.IsNullOrWhiteSpace(searchTerm))
                return Users;

            var term = searchTerm.ToLowerInvariant();
            return Users.Where(u => 
                u.FirstName.ToLowerInvariant().Contains(term) ||
                u.LastName.ToLowerInvariant().Contains(term) ||
                u.Email.ToLowerInvariant().Contains(term) ||
                (u.Phone?.ToLowerInvariant().Contains(term) ?? false)
            );
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            
            Logger.LogInformation("Registrations page initialized. UserId: {UserId}", userId);
            
            if (!string.IsNullOrEmpty(userId) && int.TryParse(userId, out var id))
            {
                CurrentUserId = id;
                var currentUser = await AuthenticationPort.GetCurrentUserAsync(userId);
                if (currentUser != null)
                {
                    var role = await AuthenticationPort.GetAllRolePermissionsAsync();
                    var userRole = role.FirstOrDefault(r => r.Id == currentUser.RolePermissionId);
                    IsSuperAdmin = userRole != null && userRole.Name == "SuperAdmin";
                    Logger.LogInformation("User role: {RoleName}, IsSuperAdmin: {IsSuperAdmin}", userRole?.Name, IsSuperAdmin);
                }
            }
            
            if (IsSuperAdmin)
            {
                await LoadUsers();
                await LoadReferenceData();
                StateHasChanged();
            }
            else
            {
                Logger.LogWarning("User is not SuperAdmin. Access denied.");
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading users: {ex.Message}";
            Logger.LogError(ex, "Error loading users in Registrations");
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadUsers()
    {
        try
        {
            Users = await AuthenticationPort.GetAllUsersAsync();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading users: {ex.Message}";
            Logger.LogError(ex, "Error loading users");
        }
    }

    private async Task LoadReferenceData()
    {
        try
        {
            RolePermissions = await AuthenticationPort.GetAllRolePermissionsAsync();
            DanceSchools = await AuthenticationPort.GetAllDanceSchoolsAsync();
            
            // Carrega todas as franchises do banco
            Franchises = await AuthenticationPort.GetAllFranchisesAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading reference data");
        }
    }

    private void HandleAddUser()
    {
        try
        {
            Navigation.NavigateTo("/signup");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error navigating to signup");
            ErrorMessage = $"Error: {ex.Message}";
        }
    }

    private void HandleEditUser(UserDto user)
    {
        try
        {
            Navigation.NavigateTo($"/signup?userId={user.Id}");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error navigating to edit user {UserId}", user.Id);
            ErrorMessage = $"Error: {ex.Message}";
        }
    }

    private void HandleDeleteUser(UserDto user)
    {
        try
        {
            UserToDelete = user;
            ShowDeleteConfirm = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error showing delete confirmation for user {UserId}", user.Id);
            ErrorMessage = $"Error: {ex.Message}";
        }
    }

    private async Task ConfirmDeleteUser()
    {
        if (UserToDelete == null) return;

        Logger.LogInformation("ConfirmDeleteUser called for user: {UserId}", UserToDelete.Id);
        IsDeleting = true;
        ErrorMessage = null;
        SuccessMessage = null;
        StateHasChanged();

        try
        {
            var response = await AuthenticationPort.DeleteUserAsync(UserToDelete.Id);
            
            if (response.IsSuccess)
            {
                SuccessMessage = "User deleted successfully.";
                ShowDeleteConfirm = false;
                UserToDelete = null;
                await LoadUsers();
                await LoadReferenceData();
                StateHasChanged();
            }
            else
            {
                ErrorMessage = response.Message ?? "Failed to delete user.";
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error deleting user: {ex.Message}";
            Logger.LogError(ex, "Error deleting user: {UserToDelete.Id}");
            StateHasChanged();
        }
        finally
        {
            IsDeleting = false;
            StateHasChanged();
        }
    }
}
