@page "/register-agegroup"
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@using DanceWaves.Application.Dtos
@using DanceWaves.Application.Ports
@using DanceWaves.Models
@inject IAgeGroupPersistencePort AgeGroupPort
@inject IAuthenticationPort AuthenticationPort
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<AgeGroupRegister> Logger
@rendermode InteractiveServer

@if (!HasCheckedPermissions)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (IsAdmin)
{
                <div class="container-fluid mt-4">
                    <div class="row mb-2">
                        <div class="col-md-12">
                            <a href="/administration" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left"></i> Back to Administration
                            </a>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h2 class="mb-0"><i class="bi bi-people"></i> Age Group Management</h2>
                            <p class="text-muted">Define the age intervals that competitors can participate in</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ErrorMessage
                            <button type="button" class="btn-close" @onclick="@(() => ErrorMessage = null)"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @SuccessMessage
                            <button type="button" class="btn-close" @onclick="@(() => SuccessMessage = null)"></button>
                        </div>
                    }

                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title mb-3">@FormTitle</h5>
                            <form class="row gx-3 gy-2 align-items-end">
                                <div class="col-md-3">
                                    <label class="form-label">Code</label>
                                    <input class="form-control" @bind="EditingAgeGroup.Code" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Name</label>
                                    <input class="form-control" @bind="EditingAgeGroup.Name" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Min Age</label>
                                    <input type="number" class="form-control" @bind="EditingAgeGroup.MinAge" min="0" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Max Age</label>
                                    <input type="number" class="form-control" @bind="EditingAgeGroup.MaxAge" min="0" />
                                </div>
                                <div class="col-md-1 d-flex gap-2">
                                    <button type="button" class="btn btn-success" @onclick="HandleSaveAgeGroup" disabled="@IsSavingAgeGroup">
                                        @(EditingAgeGroup.Id > 0 ? "Update" : "Create")
                                    </button>
                                </div>
                                <div class="col-md-12 mt-1">
                                    <button type="button" class="btn btn-outline-secondary" @onclick="CancelEditAgeGroup" disabled="@IsSavingAgeGroup">
                                        Cancel
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    @if (IsLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (AgeGroups == null || !AgeGroups.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No age groups defined yet.
                        </div>
                    }
                    else
                    {
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>ID</th>
                                                <th>Code</th>
                                                <th>Name</th>
                                                <th>Min Age</th>
                                                <th>Max Age</th>
                                                <th class="text-center">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var ag in AgeGroups)
                                            {
                                                <tr>
                                                    <td>@ag.Id</td>
                                                    <td>@ag.Code</td>
                                                    <td>@ag.Name</td>
                                                    <td>@ag.MinAge</td>
                                                    <td>@ag.MaxAge</td>
                                                    <td class="text-center">
                                                        <div class="btn-group" role="group">
                                                            <button class="btn btn-sm btn-outline-primary" @onclick="@(() => HandleEditAgeGroup(ag))" title="Edit Age Group">
                                                                <i class="bi bi-pencil"></i>
                                                            </button>
                                                            <button class="btn btn-sm btn-outline-danger" @onclick="@(() => HandleDeleteAgeGroup(ag))" title="Delete Age Group">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }

                    @if (ShowDeleteConfirm && AgeGroupToDelete != null)
                    {
                        <div class="modal fade show" style="display: block;" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Confirm Deletion</h5>
                                        <button type="button" class="btn-close" @onclick="@(() => ShowDeleteConfirm = false)"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Delete age group <strong>@AgeGroupToDelete.Code</strong> - @AgeGroupToDelete.Name?</p>
                                        <p class="text-danger"><small>This action cannot be undone.</small></p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" @onclick="@(() => ShowDeleteConfirm = false)">Cancel</button>
                                        <button type="button" class="btn btn-danger" @onclick="ConfirmDeleteAgeGroup" disabled="@IsDeleting">
                                            @if (IsDeleting)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                            }
                                            Delete Age Group
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-backdrop fade show"></div>
                    }
                </div>
}
else
{
    <div class="container-fluid mt-5">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> You do not have permission to access this page.
        </div>
    </div>
}

@code {
    private List<AgeGroupDto> AgeGroups { get; set; } = new();
    private AgeGroupDto EditingAgeGroup { get; set; } = new();
    private AgeGroupDto? AgeGroupToDelete { get; set; }
    private bool IsLoading { get; set; } = true;
    private bool IsSavingAgeGroup { get; set; } = false;
    private bool IsAdmin { get; set; } = false;
    private bool IsDeleting { get; set; } = false;
    private string? ErrorMessage { get; set; }
    private string? SuccessMessage { get; set; }
    private bool ShowDeleteConfirm { get; set; } = false;
    private bool HasCheckedPermissions { get; set; } = false;

    private string FormTitle => EditingAgeGroup.Id > 0 ? "Update Age Group" : "Create Age Group";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (!string.IsNullOrEmpty(userId))
            {
                var currentUser = await AuthenticationPort.GetCurrentUserAsync(userId);
                if (currentUser != null)
                {
                    var rolePermissions = await AuthenticationPort.GetAllRolePermissionsAsync();
                    var userRole = rolePermissions.FirstOrDefault(r => r.Id == currentUser.RolePermissionId);
                    IsAdmin = userRole != null && (userRole.Id == 1 || userRole.Id == 2);
                }
            }

            if (IsAdmin)
            {
                await LoadAgeGroups();
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading age groups: {ex.Message}";
            Logger.LogError(ex, "Error loading age groups in AgeGroupRegister");
        }
        finally
        {
            IsLoading = false;
            HasCheckedPermissions = true;
        }
    }

    private async Task LoadAgeGroups()
    {
        try
        {
            var ageGroups = await AgeGroupPort.GetAllAsync();
            AgeGroups = ageGroups.ToList();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading age groups: {ex.Message}";
            Logger.LogError(ex, "Error loading age groups");
        }
    }

    private void HandleEditAgeGroup(AgeGroupDto ag)
    {
        Logger.LogInformation("Editing age group {AgeGroupId}", ag.Id);
        EditingAgeGroup = new AgeGroupDto
        {
            Id = ag.Id,
            Code = ag.Code,
            Name = ag.Name,
            MinAge = ag.MinAge,
            MaxAge = ag.MaxAge
        };
        ErrorMessage = null;
        SuccessMessage = null;
    }

    private void CancelEditAgeGroup()
    {
        Logger.LogInformation("Age group edit canceled");
        EditingAgeGroup = new AgeGroupDto();
        ErrorMessage = null;
    }

    private async Task HandleSaveAgeGroup()
    {
        ErrorMessage = null;
        SuccessMessage = null;

        if (string.IsNullOrWhiteSpace(EditingAgeGroup.Code) || string.IsNullOrWhiteSpace(EditingAgeGroup.Name))
        {
            ErrorMessage = "Code and Name are required.";
            return;
        }

        if (EditingAgeGroup.MinAge < 6 || EditingAgeGroup.MinAge > 120)
        {
            ErrorMessage = "Min Age must be between 6 and 120.";
            return;
        }
        if (EditingAgeGroup.MaxAge < 6 || EditingAgeGroup.MaxAge > 120)
        {
            ErrorMessage = "Max Age must be between 6 and 120.";
            return;
        }
        if (EditingAgeGroup.MaxAge < EditingAgeGroup.MinAge)
        {
            ErrorMessage = "Max age must be equal or greater than min age.";
            return;
        }

        IsSavingAgeGroup = true;
        try
        {
            if (EditingAgeGroup.Id > 0)
            {
                await AgeGroupPort.UpdateAsync(EditingAgeGroup);
                SuccessMessage = "Age group updated successfully.";
            }
            else
            {
                await AgeGroupPort.CreateAsync(EditingAgeGroup);
                SuccessMessage = "Age group created successfully.";
            }

            EditingAgeGroup = new AgeGroupDto();
            await LoadAgeGroups();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error saving age group: {ex.Message}";
            Logger.LogError(ex, "Error saving age group");
        }
        finally
        {
            IsSavingAgeGroup = false;
        }
    }

    private void HandleDeleteAgeGroup(AgeGroupDto ag)
    {
        Logger.LogInformation("Preparing to delete age group {AgeGroupId}", ag.Id);
        AgeGroupToDelete = ag;
        ShowDeleteConfirm = true;
    }

    private async Task ConfirmDeleteAgeGroup()
    {
        if (AgeGroupToDelete == null) return;

        IsDeleting = true;
        ErrorMessage = null;
        SuccessMessage = null;
        try
        {
            await AgeGroupPort.DeleteAsync(AgeGroupToDelete.Id);
            SuccessMessage = "Age group deleted successfully.";
            ShowDeleteConfirm = false;
            AgeGroupToDelete = null;
            EditingAgeGroup = new AgeGroupDto();
            await LoadAgeGroups();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error deleting age group: {ex.Message}";
            Logger.LogError(ex, "Error deleting age group: {AgeGroupId}", AgeGroupToDelete?.Id);
        }
        finally
        {
            IsDeleting = false;
        }
    }
}
