@page "/administration"
@rendermode InteractiveServer

<div class="container-fluid mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1>⚙️ Administration</h1>
            
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Competition</h5>
                    <p class="card-text">Manage competitions.</p>
                    <a href="/register-competition" class="btn btn-outline-primary btn-sm">Competition Form</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Competition Category</h5>
                    <p class="card-text">Manage competition categories.</p>
                    <a href="/register-competitioncategory" class="btn btn-outline-primary btn-sm">Competition Category Form</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Judge Panel</h5>
                    <p class="card-text">Manage judge panels.</p>
                    <a href="/register-judgepanel" class="btn btn-outline-primary btn-sm">Judge Panel Form</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Style</h5>
                    <p class="card-text">Manage dance styles.</p>
                    <a href="/register-style" class="btn btn-outline-primary btn-sm">Style Form</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Score</h5>
                    <p class="card-text">Manage scores.</p>
                    <a href="/register-score" class="btn btn-outline-primary btn-sm">Score Form</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Age Group</h5>
                    <p class="card-text">Manage age groups.</p>
                    <a href="/register-agegroup" class="btn btn-outline-primary btn-sm">Age Group Form</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Level</h5>
                    <p class="card-text">Manage levels.</p>
                    <a href="/register-level" class="btn btn-outline-primary btn-sm">Level Form</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Cadastrar e gerenciar usuários.</p>
                    <a href="/administration/users" class="btn btn-outline-primary btn-sm">User Form</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Role Permissions</h5>
                    <p class="card-text">Cadastrar e gerenciar permissões de papel.</p>
                    <a href="/administration/rolepermissions" class="btn btn-outline-primary btn-sm">Role Permission Management</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">System Logs</h5>
                </div>
                <div class="card-body">
                    
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override Task OnInitializedAsync()
    {
        return Task.CompletedTask;
    }
}
