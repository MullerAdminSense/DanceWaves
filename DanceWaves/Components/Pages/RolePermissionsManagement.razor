@page "/administration/rolepermissions"
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using DanceWaves.Models
@using DanceWaves.Application.Dtos
@using DanceWaves.Application.Ports
@inject IAuthenticationPort AuthenticationPort
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject ILogger<RolePermissionsManagement> Logger
@rendermode InteractiveServer

@if (!HasCheckedPermissions)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (IsAdmin)
{
            <div class="container-fluid mt-4">
                @* Botão Back to Administration no topo *@
                <div class="row mb-2">
                    <div class="col-md-12">
                        <a href="/administration" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left"></i> Back to Administration
                        </a>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-12">
                        <h2 class="mb-0"><i class="bi bi-shield-lock"></i> Role Permission Management</h2>
                        <p class="text-muted">Create, edit and delete Role Permissions</p>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @ErrorMessage
                        <button type="button" class="btn-close" @onclick="@(() => ErrorMessage = null)"></button>
                    </div>
                }

                @if (!string.IsNullOrEmpty(SuccessMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @SuccessMessage
                        <button type="button" class="btn-close" @onclick="@(() => SuccessMessage = null)"></button>
                    </div>
                }

                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">@FormTitle</h5>
                        <form class="row gx-3 gy-2 align-items-end">
                            <div class="col-md-4">
                                <label for="roleName" class="form-label">Role Name</label>
                                <input id="roleName" class="form-control" @bind="EditingRole.Name" required />
                            </div>
                            <div class="col-md-5">
                                <label for="roleDescription" class="form-label">Description</label>
                                <input id="roleDescription" class="form-control" @bind="EditingRole.Description" />
                            </div>
                            <div class="col-md-3 d-flex gap-2">
                                <button type="button" class="btn btn-success" @onclick="HandleSaveRolePermission" disabled="@IsSavingRolePermission">
                                    @(EditingRole.Id > 0 ? "Update" : "Create")
                                </button>
                                <button type="button" class="btn btn-outline-secondary" @onclick="CancelEditRolePermission" disabled="@IsSavingRolePermission">
                                    Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                @if (IsLoading)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
                else if (RolePermissions == null || !RolePermissions.Any())
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> No role permissions found.
                    </div>
                }
                else
                {
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var rp in RolePermissions)
                                        {
                                            <tr>
                                                <td>@rp.Id</td>
                                                <td>@rp.Name</td>
                                                <td>@rp.Description</td>
                                                <td class="text-center">
                                                    <div class="btn-group" role="group">
                                                        <button class="btn btn-sm btn-outline-primary" 
                                                                @onclick="@(() => HandleEditRolePermission(rp))" 
                                                                title="Edit Role Permission">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-danger" 
                                                                @onclick="@(() => HandleDeleteRolePermission(rp))" 
                                                                title="Delete Role Permission">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @* Modal de confirmação de exclusão *@
            @if (ShowDeleteConfirm && RolePermissionToDelete != null)
            {
                <div class="modal fade show" style="display: block;" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Confirm Deletion</h5>
                                <button type="button" class="btn-close" @onclick="@(() => ShowDeleteConfirm = false)"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete role <strong>@RolePermissionToDelete?.Name</strong>?</p>
                                <p class="text-danger"><small>This action cannot be undone.</small></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" @onclick="@(() => ShowDeleteConfirm = false)">Cancel</button>
                                <button type="button" class="btn btn-danger" @onclick="ConfirmDeleteRolePermission" disabled="@IsDeleting">
                                    @if (IsDeleting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    Delete Role Permission
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-backdrop fade show"></div>
            }
}
else
{
    <div class="container-fluid mt-5">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> You do not have permission to access this page.
        </div>
    </div>
}

@code {
    private List<UserRolePermissionDto> RolePermissions { get; set; } = new();
    private UserRolePermissionDto EditingRole { get; set; } = new();
    private bool IsSavingRolePermission { get; set; } = false;
    private bool IsLoading { get; set; } = true;
    private bool IsAdmin { get; set; } = false;
    private bool HasCheckedPermissions { get; set; } = false;
    private string? ErrorMessage { get; set; }
    private string? SuccessMessage { get; set; }
    private bool ShowDeleteConfirm { get; set; } = false;
    private UserRolePermissionDto? RolePermissionToDelete { get; set; }
    private bool IsDeleting { get; set; } = false;

    private string FormTitle => EditingRole.Id > 0 ? "Update Role Permission" : "Create Role Permission";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (!string.IsNullOrEmpty(userId) && int.TryParse(userId, out var id))
            {
                var currentUser = await AuthenticationPort.GetCurrentUserAsync(userId);
                if (currentUser != null)
                {
                    var role = await AuthenticationPort.GetAllRolePermissionsAsync();
                    var userRole = role.FirstOrDefault(r => r.Id == currentUser.RolePermissionId);
                    IsAdmin = userRole != null && (userRole.Id == 1 || userRole.Id == 2);
                }
            }
            if (IsAdmin)
            {
                await LoadRolePermissions();
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading role permissions: {ex.Message}";
            Logger.LogError(ex, "Error loading role permissions in RolePermissionsManagement");
        }
        finally
        {
            IsLoading = false;
            HasCheckedPermissions = true;
        }
    }

    private async Task LoadRolePermissions()
    {
        try
        {
            RolePermissions = await AuthenticationPort.GetAllRolePermissionsAsync();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading role permissions: {ex.Message}";
            Logger.LogError(ex, "Error loading role permissions");
        }
    }

    private void HandleEditRolePermission(UserRolePermissionDto rp)
    {
        Logger.LogInformation("Editing role {RoleId}", rp.Id);
        EditingRole = new UserRolePermissionDto
        {
            Id = rp.Id,
            Name = rp.Name,
            Description = rp.Description
        };
        ErrorMessage = null;
        SuccessMessage = null;
        StateHasChanged();
    }

    private void CancelEditRolePermission()
    {
        Logger.LogInformation("Role edit canceled");
        EditingRole = new UserRolePermissionDto();
        ErrorMessage = null;
    }

    private async Task HandleSaveRolePermission()
    {
        ErrorMessage = null;
        SuccessMessage = null;

        if (string.IsNullOrWhiteSpace(EditingRole.Name))
        {
            ErrorMessage = "Role name is required.";
            return;
        }

        IsSavingRolePermission = true;
        try
        {
            Logger.LogInformation("Saving role permission {RoleId}", EditingRole.Id);
            var payload = new UserRolePermissionDto
            {
                Id = EditingRole.Id,
                Name = EditingRole.Name?.Trim() ?? string.Empty,
                Description = EditingRole.Description?.Trim()
            };

            AuthenticationResponse response;
            if (payload.Id > 0)
            {
                response = await AuthenticationPort.UpdateRolePermissionAsync(payload);
            }
            else
            {
                response = await AuthenticationPort.CreateRolePermissionAsync(payload);
            }

            if (response.IsSuccess)
            {
                SuccessMessage = response.Message ?? "Role permission saved successfully.";
                EditingRole = new UserRolePermissionDto();
                await LoadRolePermissions();
            }
            else
            {
                ErrorMessage = response.Message ?? "Failed to save role permission.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error saving role permission: {ex.Message}";
            Logger.LogError(ex, "Error saving role permission");
        }
        finally
        {
            IsSavingRolePermission = false;
        }
    }

    private void HandleDeleteRolePermission(UserRolePermissionDto rp)
    {
        Logger.LogInformation("Preparing to delete role {RoleId}", rp.Id);
        RolePermissionToDelete = rp;
        ShowDeleteConfirm = true;
        StateHasChanged();
    }

    private async Task ConfirmDeleteRolePermission()
    {
        if (RolePermissionToDelete == null) return;

        IsDeleting = true;
        ErrorMessage = null;
        SuccessMessage = null;

        try
        {
            var response = await AuthenticationPort.DeleteRolePermissionAsync(RolePermissionToDelete.Id);
            if (response.IsSuccess)
            {
                SuccessMessage = response.Message ?? "Role permission deleted successfully.";
                ShowDeleteConfirm = false;
                RolePermissionToDelete = null;
                EditingRole = new UserRolePermissionDto(); // Clear fields after deletion
                await LoadRolePermissions();
            }
            else
            {
                ErrorMessage = response.Message ?? "Failed to delete role permission.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error deleting role permission: {ex.Message}";
            Logger.LogError(ex, "Error deleting role permission: {RoleId}", RolePermissionToDelete?.Id);
        }
        finally
        {
            IsDeleting = false;
        }
    }
}
