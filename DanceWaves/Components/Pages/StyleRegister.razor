@page "/register-style"
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@using DanceWaves.Application.Dtos
@using DanceWaves.Application.Ports
@using DanceWaves.Models
@inject IAuthenticationPort AuthenticationPort
@inject AuthenticationStateProvider AuthStateProvider
@inject ILogger<StyleRegister> Logger
@rendermode InteractiveServer

<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            @if (IsAdmin)
            {
                <div class="container-fluid mt-4">
                    <div class="row mb-2">
                        <div class="col-md-12">
                            <a href="/administration" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left"></i> Back to Administration
                            </a>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h2 class="mb-0"><i class="bi bi-palette"></i> Style Management</h2>
                            <p class="text-muted">Create, edit and delete dance styles</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ErrorMessage
                            <button type="button" class="btn-close" @onclick="@(() => ErrorMessage = null)"></button>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @SuccessMessage
                            <button type="button" class="btn-close" @onclick="@(() => SuccessMessage = null)"></button>
                        </div>
                    }

                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title mb-3">@FormTitle</h5>
                            <form class="row gx-3 gy-2 align-items-end">
                                <div class="col-md-4">
                                    <label class="form-label">Code</label>
                                    <input class="form-control" @bind="EditingStyle.Code" autocomplete="off" />
                                </div>
                                <div class="col-md-5">
                                    <label class="form-label">Name</label>
                                    <input class="form-control" @bind="EditingStyle.Name" />
                                </div>
                                <div class="col-md-3 d-flex gap-2">
                                    <button type="button" class="btn btn-success" @onclick="HandleSaveStyle" disabled="@IsSavingStyle">
                                        @(EditingStyle.Id > 0 ? "Update" : "Create")
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" @onclick="CancelEditStyle" disabled="@IsSavingStyle">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    @if (IsLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (Styles == null || !Styles.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No styles have been defined yet.
                        </div>
                    }
                    else
                    {
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>ID</th>
                                                <th>Code</th>
                                                <th>Name</th>
                                                <th class="text-center">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var style in Styles)
                                            {
                                                <tr>
                                                    <td>@style.Id</td>
                                                    <td>@style.Code</td>
                                                    <td>@style.Name</td>
                                                    <td class="text-center">
                                                        <div class="btn-group" role="group">
                                                            <button class="btn btn-sm btn-outline-primary" @onclick="@(() => HandleEditStyle(style))" title="Edit Style">
                                                                <i class="bi bi-pencil"></i>
                                                            </button>
                                                            <button class="btn btn-sm btn-outline-danger" @onclick="@(() => HandleDeleteStyle(style))" title="Delete Style">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }

                    @if (ShowDeleteConfirm && StyleToDelete != null)
                    {
                        <div class="modal fade show" style="display: block;" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Confirm Deletion</h5>
                                        <button type="button" class="btn-close" @onclick="@(() => ShowDeleteConfirm = false)"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Delete style <strong>@StyleToDelete.Code</strong> - @StyleToDelete.Name?</p>
                                        <p class="text-danger"><small>This action cannot be undone.</small></p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" @onclick="@(() => ShowDeleteConfirm = false)">Cancel</button>
                                        <button type="button" class="btn btn-danger" @onclick="ConfirmDeleteStyle" disabled="@IsDeleting">
                                            @if (IsDeleting)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                            }
                                            Delete Style
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-backdrop fade show"></div>
                    }
                </div>
            }
            else
            {
                <div class="container-fluid mt-5">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> You do not have permission to access this page.
                    </div>
                </div>
            }
        </Authorized>
        <NotAuthorized>
            <div class="container-fluid mt-5">
                <div class="alert alert-danger">
                    <i class="bi bi-lock"></i> Please log in to access this page.
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>

@code {
    private List<Style> Styles { get; set; } = new();
    private Style EditingStyle { get; set; } = new();
    private Style? StyleToDelete { get; set; }
    private bool IsLoading { get; set; } = true;
    private bool IsSavingStyle { get; set; } = false;
    private bool IsAdmin { get; set; } = false;
    private string? ErrorMessage { get; set; }
    private string? SuccessMessage { get; set; }
    private bool ShowDeleteConfirm { get; set; } = false;
    private bool IsDeleting { get; set; } = false;

    private string FormTitle => EditingStyle.Id > 0 ? "Update Style" : "Create Style";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (!string.IsNullOrEmpty(userId))
            {
                var currentUser = await AuthenticationPort.GetCurrentUserAsync(userId);
                if (currentUser != null)
                {
                    var rolePermissions = await AuthenticationPort.GetAllRolePermissionsAsync();
                    var userRole = rolePermissions.FirstOrDefault(r => r.Id == currentUser.RolePermissionId);
                    IsAdmin = userRole != null && (userRole.Name == "SuperAdmin" || userRole.Name == "FranchiseAdmin");
                }
            }

            if (IsAdmin)
            {
                await LoadStyles();
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading styles: {ex.Message}";
            Logger.LogError(ex, "Error loading styles in StyleRegister");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task LoadStyles()
    {
        try
        {
            Styles = await AuthenticationPort.GetAllStylesAsync();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading styles: {ex.Message}";
            Logger.LogError(ex, "Error loading styles");
        }
    }

    private void HandleEditStyle(Style style)
    {
        Logger.LogInformation("Editing style {StyleId}", style.Id);
        EditingStyle = new Style
        {
            Id = style.Id,
            Code = style.Code,
            Name = style.Name
        };
        ErrorMessage = null;
        SuccessMessage = null;
    }

    private void CancelEditStyle()
    {
        Logger.LogInformation("Style edit canceled");
        EditingStyle = new Style();
        ErrorMessage = null;
    }

    private async Task HandleSaveStyle()
    {
        ErrorMessage = null;
        SuccessMessage = null;
        if (string.IsNullOrWhiteSpace(EditingStyle.Code) || string.IsNullOrWhiteSpace(EditingStyle.Name))
        {
            ErrorMessage = "Both code and name are required.";
            return;
        }

        IsSavingStyle = true;
        try
        {
            AuthenticationResponse response;
            if (EditingStyle.Id > 0)
            {
                response = await AuthenticationPort.UpdateStyleAsync(EditingStyle);
            }
            else
            {
                response = await AuthenticationPort.CreateStyleAsync(EditingStyle);
            }

            if (response.IsSuccess)
            {
                SuccessMessage = response.Message ?? "Style saved.";
                EditingStyle = new Style();
                await LoadStyles();
            }
            else
            {
                ErrorMessage = response.Message ?? "Failed to save style.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error saving style: {ex.Message}";
            Logger.LogError(ex, "Error saving style");
        }
        finally
        {
            IsSavingStyle = false;
        }
    }

    private void HandleDeleteStyle(Style style)
    {
        Logger.LogInformation("Preparing to delete style {StyleId}", style.Id);
        StyleToDelete = style;
        ShowDeleteConfirm = true;
    }

    private async Task ConfirmDeleteStyle()
    {
        if (StyleToDelete == null) return;

        IsDeleting = true;
        ErrorMessage = null;
        SuccessMessage = null;
        try
        {
            var response = await AuthenticationPort.DeleteStyleAsync(StyleToDelete.Id);
            if (response.IsSuccess)
            {
                SuccessMessage = response.Message ?? "Style deleted.";
                StyleToDelete = null;
                ShowDeleteConfirm = false;
                await LoadStyles();
            }
            else
            {
                ErrorMessage = response.Message ?? "Failed to delete style.";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error deleting style: {ex.Message}";
            Logger.LogError(ex, "Error deleting style: {StyleId}", StyleToDelete?.Id);
        }
        finally
        {
            IsDeleting = false;
        }
    }
}
